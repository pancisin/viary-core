{
  "name": "viary-core",
  "version": "0.2.38",
  "private": false,
  "scripts": {
    "serve": "vue-cli-service serve",
    "lint": "vue-cli-service lint --fix",
    "build": "vue-cli-service build --target lib --name diary-core ./src/build.js",
    "build:modules": "vue-cli-service build --target lib --dest dist/modules --name diary-core-modules ./src/modules/index.js",
    "build:plugins": "vue-cli-service build --target lib --dest dist/plugins --name diary-core-plugins ./src/plugins/index.js"
  },
  "files": [
    "dist/*",
    "public/*",
    "*.json",
    "*.js"
  ],
  "dependencies": {
    "bootstrap-scss": "^4.1.3",
    "debounce": "^1.2.0",
    "font-awesome": "^4.7.0",
    "linearicons": "^1.0.1",
    "luxon": "^1.3.3",
    "pouchdb": "^7.0.0",
    "pouchdb-find": "^7.0.0",
    "sockjs-client": "^1.3.0",
    "velocity-animate": "^1.5.2",
    "vuex": "^3.0.1",
    "weather-icons-sass": "^2.0.10",
    "webstomp-client": "^1.2.4"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.1",
    "@vue/cli-plugin-eslint": "^3.0.1",
    "@vue/cli-service": "^3.0.1",
    "mini-css-extract-plugin": "^0.4.2",
    "sass-loader": "^7.1.0",
    "node-sass": "^4.9.3",
    "vue": "^2.5.17",
    "vue-resource": "^1.5.1",
    "vue-router": "^3.0.1",
    "vue-template-compiler": "^2.5.17"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
